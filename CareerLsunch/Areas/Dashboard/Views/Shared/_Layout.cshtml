

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Admin | Career Launch</title>
    <meta content="width=device-width, initial-scale=1.0, shrink-to-fit=no" name="viewport" />
    <link rel="icon" href="@Url.Content("~/assets/images/favicons/Title2.png")" type="image/x-icon" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
    <!-- Fonts and icons -->
    <script src="@Url.Content("~/assets/images/favicons/Title2.png")"></script>
    <script>
        WebFont.load({
            google: { families: ["Public Sans:300,400,500,600,700"] },
            custom: {
                families: [
                    "Font Awesome 5 Solid",
                    "Font Awesome 5 Regular", +
                    "Font Awesome 5 Brands",
                    "simple-line-icons",
                ],
                urls: ["@Url.Content("~/Admin/assets/css/fonts.min.css")"],
            },
            active: function () {
                sessionStorage.fonts = true;
            },
        });
    </script>

    <!-- CSS Files -->
    <link rel="stylesheet" href="@Url.Content("~/Admin/assets/css/bootstrap.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Admin/assets/css/plugins.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Admin/assets/css/kaiadmin.min.css")" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">




</head>
<body>
    <div class="wrapper">
        <!-- Sidebar -->
        <div class="sidebar" style="background-color: #2c3e50; color: #ecf0f1;">
            <div class="sidebar-logo">
                <!-- Logo Header -->
                <div class="logo-header" style="background-color: #34495e; color: #ecf0f1; padding: 10px; border: none;">
                    <a href="https://localhost:7118/" class="logo" style="text-decoration: none; color: #ecf0f1;">
                        <div class="site-logo col-6" style="font-size: 20px; font-weight: bold; text-align: center;">
                            CareerLaunch
                        </div>
                    </a>
                    <div class="nav-toggle">
                        <button class="btn btn-toggle toggle-sidebar" style="color: #ecf0f1; background: none; border: none;">
                            <i class="gg-menu-right"></i>
                        </button>
                        <button class="btn btn-toggle sidenav-toggler" style="color: #ecf0f1; background: none; border: none;">
                            <i class="gg-menu-left"></i>
                        </button>
                    </div>
                    <button class="topbar-toggler more" style="color: #ecf0f1; background: none; border: none;">
                        <i class="gg-more-vertical-alt"></i>
                    </button>
               

        </div>

                <!-- End Logo Header -->
            </div>

            <div class="sidebar-wrapper scrollbar scrollbar-inner" style="background-color: #2c3e50; color: #ecf0f1; height: 100vh; padding: 10px;">
                <div class="sidebar-content">
                    <ul class="nav nav-secondary" style="list-style: none; padding: 0; margin: 0;">

                        <!-- Dashboard Section -->
                        <li class="nav-item active" style="margin-bottom: 15px;">
                            <a href="#" class="d-flex align-items-center" style="text-decoration: none; color: #ecf0f1; font-size: 16px; font-weight: 600;">
                                <i class="fas fa-home me-2" style="font-size: 20px; color: #1abc9c;"></i>
                                <span style="margin-left: 5px;">Dashboard</span>
                            </a>
                        </li>


                        <!-- Blogs Section -->
                        <li class="nav-section" style="margin-bottom: 10px;">
                            <h4 class="text-section" style="font-size: 14px; font-weight: bold; color: #95a5a6; margin-bottom: 5px;">Blogs</h4>
                        </li>
                        <li class="nav-item" style="margin-bottom: 15px;">
                            <a asp-action="Index" asp-controller="BlogPosts" class="d-flex align-items-center" style="text-decoration: none; color: #ecf0f1; font-size: 16px;">
                                <i class="fas fa-table me-2" style="font-size: 18px; color: #1abc9c;"></i>
                                <p>Blogs Table</p>
                            </a>
                        </li>

                        <!-- Portfolios Section -->
                        <li class="nav-section" style="margin-bottom: 10px;">
                            <h4 class="text-section" style="font-size: 14px; font-weight: bold; color: #95a5a6; margin-bottom: 5px;">Portfolios</h4>
                        </li>
                        <li class="nav-item" style="margin-bottom: 15px;">
                            <a asp-action="Index" asp-controller="Portfolios" class="d-flex align-items-center" style="text-decoration: none; color: #ecf0f1; font-size: 16px;">
                                <i class="fas fa-table me-2" style="font-size: 18px; color: #1abc9c;"></i>
                                <p>Portfolio Table</p>
                            </a>
                        </li>

                        <!-- Public Users Section -->
                        <li class="nav-section" style="margin-bottom: 10px;">
                            <h4 class="text-section" style="font-size: 14px; font-weight: bold; color: #95a5a6; margin-bottom: 5px;">Jobs</h4>
                        </li>
                        <li class="nav-item" style="margin-bottom: 15px;">
                            <a asp-action="Index" asp-controller="JobPosts" class="d-flex align-items-center" style="text-decoration: none; color: #ecf0f1; font-size: 16px;">
                                <i class="fas fa-table me-2" style="font-size: 18px; color: #1abc9c;"></i>
                                <p>Jobs Table</p>
                            </a>
                        </li>

                        <!-- Applications Section -->
                        <li class="nav-section" style="margin-bottom: 10px;">
                            <h4 class="text-section" style="font-size: 14px; font-weight: bold; color: #95a5a6; margin-bottom: 5px;">Applications</h4>
                        </li>
                        <li class="nav-item" style="margin-bottom: 15px;">
                            <a asp-action="Index" asp-controller="Applications" class="d-flex align-items-center" style="text-decoration: none; color: #ecf0f1; font-size: 16px;">
                                <i class="fas fa-table me-2" style="font-size: 18px; color: #1abc9c;"></i>
                                <p>Application Table</p>
                            </a>
                        </li>

                        <!-- Contact Us Section -->
                        <li class="nav-section" style="margin-bottom: 10px;">
                            <h4 class="text-section" style="font-size: 14px; font-weight: bold; color: #95a5a6; margin-bottom: 5px;">Contact Us</h4>
                        </li>
                        <li class="nav-item" style="margin-bottom: 15px;">
                            <a asp-action="Index" asp-controller="Contacts" class="d-flex align-items-center" style="text-decoration: none; color: #ecf0f1; font-size: 16px;">
                                <i class="fas fa-table me-2" style="font-size: 18px; color: #1abc9c;"></i>
                                <p>Contact Table</p>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>


        </div>
    </div>
    <!-- End Sidebar -->

    <div class="main-panel">
        <div class="main-header">
            <!-- Navbar Header -->
            <nav class="navbar navbar-header navbar-expand-lg" style="background-color: #f8f9fa; border-bottom: 2px solid #1abc9c;">
                <div class="container-fluid d-flex justify-content-between align-items-center">
                    <!-- Logo (Text Only) -->
                    <a href="https://localhost:7118/" class="logo d-flex align-items-center" style="text-decoration: none; color: #1abc9c;">
                        <span style="font-size: 20px; font-weight: bold;">CareerLaunch</span>
                    </a>

                    <!-- Centered Name and Icon -->
                    <div class="d-flex align-items-center">
                        <i class="fa fa-user" style="font-size: 24px; color: #1abc9c; margin-right: 10px;"></i>
                        <span style="font-size: 18px; font-weight: 600; color: #333;">Yahya Snedawi</span>
                    </div>

                    <!-- Dropdown Menu -->
                    <div class="dropdown">
                        <a class="btn btn-link dropdown-toggle" href="#" id="socialMediaDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false" style="text-decoration: none; color: #333; font-size: 16px;">
                            My Social Media <i class="fa fa-caret-down" style="margin-left: 5px;"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end shadow-sm" aria-labelledby="socialMediaDropdown" style="min-width: 200px; border-radius: 8px;">
                            <li class="dropdown-item">
                                <a href="https://www.instagram.com/ya7ya.sn/" target="_blank" class="d-flex align-items-center" style="text-decoration: none; color: #333;">
                                    <i class="fa fa-instagram" style="color: #e4405f; font-size: 18px; margin-right: 10px;"></i>
                                    Instagram
                                </a>
                            </li>
                            <li class="dropdown-item">
                                <a href="https://www.linkedin.com/in/yahya-snedawi-37923923b/" target="_blank" class="d-flex align-items-center" style="text-decoration: none; color: #333;">
                                    <i class="fa fa-linkedin" style="color: #0077b5; font-size: 18px; margin-right: 10px;"></i>
                                    LinkedIn
                                </a>
                            </li>
                            <li class="dropdown-item">
                                <a href="https://x.com/YSnedawi" target="_blank" class="d-flex align-items-center" style="text-decoration: none; color: #333;">
                                    <i class="fa fa-twitter" style="color: #1da1f2; font-size: 18px; margin-right: 10px;"></i>
                                    Twitter
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </div>

        <br /><br /><br /><br />
        <div>
            @RenderBody()
        </div>
    </div>



   



    <!--   Core JS Files   -->
    <script src="~/Admin/assets/js/core/jquery-3.7.1.min.js"></script>
    <script src="~/Admin/assets/js/core/popper.min.js"></script>
    <script src="~/Admin/assets/js/core/bootstrap.min.js"></script>

    <!-- jQuery Scrollbar -->
    <script src="~/Admin/assets/js/plugin/jquery-scrollbar/jquery.scrollbar.min.js"></script>

    <!-- Chart JS -->
    <script src="~/Admin/assets/js/plugin/chart.js/chart.min.js"></script>

    <!-- jQuery Sparkline -->
    <script src="~/Admin/assets/js/plugin/jquery.sparkline/jquery.sparkline.min.js"></script>

    <!-- Chart Circle -->
    <script src="~/Admin/assets/js/plugin/chart-circle/circles.min.js"></script>

    <!-- Datatables -->
    <script src="~/Admin/assets/js/plugin/datatables/datatables.min.js"></script>

    <!-- Bootstrap Notify -->
    <script src="~/Admin/assets/js/plugin/bootstrap-notify/bootstrap-notify.min.js"></script>

    <!-- jQuery Vector Maps -->
    <script src="~/Admin/assets/js/plugin/jsvectormap/jsvectormap.min.js"></script>
    <script src="~/Admin/assets/js/plugin/jsvectormap/world.js"></script>

    <!-- Sweet Alert -->
    <script src="~/Admin/assets/js/plugin/sweetalert/sweetalert.min.js"></script>

    <!-- Kaiadmin JS -->
    <script src="~/Admin/assets/js/kaiadmin.min.js"></script>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>



    <script>
        $("#lineChart").sparkline([102, 109, 120, 99, 110, 105, 115], {
            type: "line",
            height: "70",
            width: "100%",
            lineWidth: "2",
            lineColor: "#177dff",
            fillColor: "rgba(23, 125, 255, 0.14)",
        });

        $("#lineChart2").sparkline([99, 125, 122, 105, 110, 124, 115], {
            type: "line",
            height: "70",
            width: "100%",
            lineWidth: "2",
            lineColor: "#f3545d",
            fillColor: "rgba(243, 84, 93, .14)",
        });

        $("#lineChart3").sparkline([105, 103, 123, 100, 95, 105, 115], {
            type: "line",
            height: "70",
            width: "100%",
            lineWidth: "2",
            lineColor: "#ffa534",
            fillColor: "rgba(255, 165, 52, .14)",
        });
    </script>
</body>
</html>


