@model CareerLaunch.Models.BlogPost

@{
    ViewData["Title"] = "Details";
}

<section class="section-hero overlay inner-page bg-image" style="background-image: url('@Url.Content("~/images/hero_1.jpg")');" id="home-section">
    <div class="container">
        <div class="row">
            <div class="col-md-7">
                <h1 class="text-white font-weight-bold">Our Blog</h1>
                <div class="custom-breadcrumbs">
                    <a href="@Url.Action("Index", "Home")">Home</a> <span class="mx-2 slash">/</span>
                    <span class="text-white"><strong>Blog Description</strong></span>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="site-section" id="next-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 blog-content">

                <h3 class="mb-4">@Model.Title</h3>

                <!-- Display truncated content if too long -->
                <p class="lead">
                    @Model.Content>  
                </p>

               
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <p>
                        <img src="@Model.ImageUrl" alt="Image" class="detail-img rounded">
                    </p>

                }

                <!-- Full content -->
                <p>@Model.Content</p>

                <h4 class="mt-5 mb-4">@Model.SectionTitle</h4>
                <p>@Model.SectionContent</p>

            </div>

            <!-- Sidebar -->
            <div class="col-lg-4 sidebar pl-lg-5">
                <div class="sidebar-box">
                    
                    @if (!string.IsNullOrEmpty(Model.AuthorImageUrl))
                    {
                        <img src="@Url.Content(Model.AuthorImageUrl)" alt="Author Image" class="img-fluid mb-4 w-50 rounded-circle">
                    }
                    else
                    {
                        <img src="@Url.Content("~/images/person_1.jpg")" alt="Default Author Image" class="img-fluid mb-4 w-50 rounded-circle">
                    }

                    <h3>About The Author</h3>
                    <p>@Model.AuthorBio</p>
                </div>
            </div>
        </div>
    </div>
</section>
